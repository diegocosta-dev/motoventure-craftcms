{% if story is defined and story %}
  <section class="featured-story">
    <div class="featured-story__flex content-column">

      <div class="featured-story__content">

        <h2>{{ story.title }}</h2>
        
        <p>{{ story.shortDescription }}</p>

        <p>
          <a href="{{ story.url }}" class="cta-link">Discover the full story</a>
        </p>
        
      </div>

      {% set pictures = story.photos|default(null) %}
      {% if pictures %}
        <div class="featured-story__slider">
          {{ include('_components/_slider', {
            pictures: pictures
          }) }}
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}

